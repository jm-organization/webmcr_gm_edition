#   Настройка веб сервера для веб-приложения на MagicMCR engine.

#   Установка кодировки и локали по умолчанию
AddDefaultCharset   UTF-8
#   DefaultLanguage     ru-RU

#   Настройка перенаправления на единую точку входа
<IfModule mod_rewrite.c>
	RewriteEngine On

	RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -l [OR]
    RewriteCond %{REQUEST_FILENAME} -d

	RewriteRule ^(data/uploads/|install/|themes/|favicon\.ico|crossdomain\.xml|robots\.txt|sitemap\.xml) - [NC,L]
	RewriteRule ^.*$ index.php [NC,L]
</IfModule>

Options -Indexes